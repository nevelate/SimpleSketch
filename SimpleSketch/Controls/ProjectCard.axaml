<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="240" d:DesignHeight="300"
             Width="240" Height="300"
             x:Class="SimpleSketch.Controls.ProjectCard">
  <Border Classes="comicBorder noShadow"
          Background="#cfe5ff"
          Margin="8">
    <Border.Effect>
      <DropShadowEffect OffsetX="4" OffsetY="4" BlurRadius="0" Opacity="1"/>
    </Border.Effect>
    <Grid RowDefinitions="auto, *">
      <Image Grid.Row="0"
             Source="/Assets/picture.png"/>
      <TextBlock Grid.Row="1"
                 Text="My Project1.json"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"/>
    </Grid>
  </Border>
</UserControl>
